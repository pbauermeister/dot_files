# Shell prompt

# Prompt w/ git branch
export PS1="\n[\033[34;7m \u@\h \033[0m \033[32m\w\033[33m\$(git branch 2>/dev/null | grep '^*' | colrm 1 1) \033[0m\$(TZ=Europe/Zurich date +%H:%M)]\n\$ "
export PS1="\n[\033[36m\u@\h \033[32m\w\033[30m\$(git branch 2>/dev/null | grep '^*' | colrm 1 1) \033[0m\$(date +%H:%M)]\n\$ "

# [ login path git-branch time SHLVL-if-gt-1 ]
export PS1="\n[\033[36m\u@\h \033[38;5;172m\w\033[32m\$(git branch 2>/dev/null | grep '^*' | colrm 1 1) \033[0m\$(date +%H:%M:%S)$(if [ ! "$SHLVL" = "1" ]; then printf " \033[7m$SHLVL\033[0m"; fi )]\n\$ "

